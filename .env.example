# ============================================
# CONFIGURAÇÃO DO SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# WHATSAPP CLOUD API
# ============================================
# Obtenha em: https://developers.facebook.com/apps/
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_APP_SECRET=
# Opcional: URL do webhook
# WHATSAPP_WEBHOOK_URL=

# ============================================
# SICOOB API
# ============================================
# Obtenha em: https://developers.sicoob.com.br/
SICOOB_CLIENT_ID=
SICOOB_CLIENT_SECRET=
SICOOB_BASE_URL=https://api.sicoob.com.br
# Opcional: caminhos para certificados SSL
# SICOOB_CERTIFICATE_PATH=
# SICOOB_KEY_PATH=

# ============================================
# GOOGLE CLOUD APIs
# ============================================
# Service Account criada no Google Cloud Console
# Habilite: Google Drive API e Google Sheets API
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=
GOOGLE_PROJECT_ID=
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_WORKSHEET_NAME=Requests

# ============================================
# REDIS (OPCIONAL)
# ============================================
# Se não configurado, o sistema usa fallback em memória
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ============================================
# SEGURANÇA & LGPD (OBRIGATÓRIO)
# ============================================
# Gere com: openssl rand -hex 32 (Linux/Mac)
# Ou PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | % {[char]})
CPF_PEPPER=
ALLOW_RAW_CPF_IN_FILENAME=false
DATA_RETENTION_DAYS=90

# ============================================
# OBSERVABILIDADE
# ============================================
LOG_LEVEL=info
SERVICE_NAME=assusa

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# CONVERSATION STATE
# ============================================
CONVERSATION_STATE_TTL_SECONDS=900
